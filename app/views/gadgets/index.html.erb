
<div class="col-md-8 col-xs-5 col-md-offset-0">
      <div class="thumbnail">
        <div class="caption">
            <form class="form-horizontal">
              <fieldset>
                <legend>Gadget Inventory</legend>
                    <div class="form-group">
                      <label for="inputEmail">&nbsp&nbspSearch by: Gadget name</label>
                        <div class="col-lg-10">
                          <input class="form-control" id="searchname" placeholder="Enter Gadget name" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                      <label for="analysisgroup">&nbsp&nbspSearch by: Analysis group(s)</label>
                        <div class="col-lg-10">
                         <input class="form-control" id="inputPassword" placeholder="Enter Analysis group " type="text">
                        </div>
                    </div><hr/>
                      <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                          <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                      </div>
              </fieldset>
            </form>
      </div>
  </div>



<div class="container-fluid">
  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-9" id="padding">
          <div class="row">
            <div class="col-md-10">
              <p class="lead"> Listing users </p>
            </div>
            
            <div class="col-md-2">
              <%= link_to 'Add Course',  new_course_path ,:class => 'btn btn-primary' %>
            </div>
          </div>
          <table class="table table-striped table-hover">
            <tr>
            <th>Gadget/App</th>
              <th>Name of the tool â–²</th>
              <th>Analysis group(s)</th>
              <th>Actions</th> 
              <th colspan="3" class="text-center"></th>
            </tr>
                <% if @courses.blank? %> 
                <p> No Courses </p>
                <% else %>
                <% @courses.each do |course| %>
                  <tr>
                    <td><%= course.title %></td>
                    <td><%= course.outcome %></td>
                    <td><%= course.description %></td>
                    <td><%= course.fee %></td>
                    <td><%= link_to 'show',course_path(course.id) %></td>
                    <td><%= link_to 'edit', edit_course_path(course.id) %></td>
                    <td><%= link_to 'Destroy', course_path(course.id), :method => 'delete' %>
                  </td>
                  </tr>
                <% end %>
                <% end %>
          </table>
          <div  class='col-lg-offset-3'>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


